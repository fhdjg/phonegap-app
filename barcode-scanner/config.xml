<?xml version='1.0' encoding='utf-8'?>
<widget id="com.xakti.qrbarcodeScanner" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Qr Barcode Scanner</name>
    <description>
        Aplikasi Pembaca Barcode dan qrcode
    </description>
    <author email="flamefyan@gmail.com" href="http://xakti.tech">
        xakti tim
    </author>
    <content src="index.html" />

    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.Notification" />
    </feature>
    <access origin="*" />
    <allow-intent href="http://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />

    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0"/>
    <plugin name="phonegap-plugin-barcodescanner" spec="4.1.0"/>
    <platform name="android">
        <icon src="img/logo.png" density="ldpi" />
        <icon src="img/logo.png" density="mdpi" />
        <icon src="img/logo.png" density="hdpi" />
        <icon src="img/logo.png" density="xhdpi" />
        <icon src="img/logo.png" density="xxhdpi" />
        <icon src="img/logo.png" density="xxxhdpi" />

        <preference name="SplashMaintainAspectRatio" value="false"/>
        <preference name="android-installLocation" value="auto"/>
    </platform>
</widget>
